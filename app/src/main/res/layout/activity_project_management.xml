<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bidzis.errorreportsystem.Project.ProjectManagementActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get all projects"
        android:id="@+id/btGetAllProjects"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get project by id"
        android:id="@+id/btGetProjectById"
        android:layout_below="@+id/btGetAllProjects"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get project by name"
        android:id="@+id/btGetProjectByName"
        android:layout_below="@+id/btGetProjectById"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btGetProjectById"
        android:layout_alignEnd="@+id/btGetProjectById" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get project by priority name"
        android:id="@+id/btGetProjectByPriorityName"
        android:layout_below="@+id/btGetProjectByName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change project&apos;s name"
        android:id="@+id/btChangeProjectName"
        android:layout_below="@+id/btGetProjectByPriorityName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btGetProjectByPriorityName"
        android:layout_alignEnd="@+id/btGetProjectByPriorityName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save project"
        android:id="@+id/btSaveProject"
        android:layout_below="@+id/btChangeProjectName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btChangeProjectName"
        android:layout_alignEnd="@+id/btChangeProjectName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove project"
        android:id="@+id/btRemoveProject"
        android:layout_below="@+id/btSaveProject"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btSaveProject"
        android:layout_alignEnd="@+id/btSaveProject" />
</RelativeLayout>
